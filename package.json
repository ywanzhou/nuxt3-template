{
  "name": "nuxt3-template",
  "version": "0.0.0",
  "description": "Nuxt3的一个开箱即用的模板",
  "author": "ywanzhou",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ywanzhou/seecode"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.29.3",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "commitizen": "^4.2.5",
    "cz-git": "^1.3.12",
    "eslint": "^8.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nuxt": "3.0.0-rc.12",
    "postcss-html": "^1.5.0",
    "stylelint": "^14.14.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^29.0.0",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix --ext"
    ],
    "*.vue": [
      "eslint --fix --ext",
      "stylelint --cache --fix"
    ],
    "*.{css,html}": [
      "stylelint --cache --fix"
    ]
  }
}
